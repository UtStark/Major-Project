@model IEnumerable<CollegeWebsite.Models.Roles>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> List Of Roles</h2>
        </div>



        <div class="col-6 text-right">
            <a class="btn btn-primary " asp-controller="Role" asp-action="Upsert"><i class="fas fa-plus"></i> Create New Role</a>

        </div>
    </div>


    <br> </br>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped table-dark" style="width:100%">
            <thead>
                <tr>

                    <th scope="col">Roles</th>
                    

                </tr>
            </thead>
            <tbody>

                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Role</td>
                        
                        <td class="text-center">

                            <div class="w-75 btn-group " role="group">
                                <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-1"><i class="far fa-edit"></i>  Edit</a>
                                <a  asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger "><i class="far fa-trash-alt"></i>  Delete</a>

                            </div>
                        </td>

                    </tr>
                }


            </tbody>
        </table>

    }

    else
    { <p> No Roles</p>}


</div>
