@model CollegeWebsite.Models.Book
@{
    ViewData["Title"] = "Edit";
    var title = "Add New Book";
    Layout = null;
}


<form asp-action="Upsert" asp-route-id="@Model.Id" method="post" onsubmit="return jQueryAjaxPost(this);" enctype="multipart/form-data">
    <div class="border p-3">

        @if (Model.Id != 0)
        {
            <input asp-for="Id" hidden />
            title = "Edit Book";
        }



        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>







        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BookName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BookName" class="form-control" />
                        <span asp-validation-for="BookName" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AuthorName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AuthorName" class="form-control" />
                        <span asp-validation-for="AuthorName" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="IssuedStudentId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="IssuedStudentId" class="form-control" />
                        <span asp-validation-for="IssuedStudentId" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="IssueDate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="IssueDate" class="form-control" />
                        <span asp-validation-for="IssueDate" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DueDate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DueDate" class="form-control" />
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Issued"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Issued" class="form-control" />
                        <span asp-validation-for="Issued" class="text-danger"></span>
                    </div>

                </div>



                @if (Model.Id != 0)
                {
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="ISBN"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="ISBN" class="form-control" />
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>

                    </div>
                }


                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.Id != 0)
                            {
                                //update
                                <input type="submit" class="btn btn-info w-100" value="Update" />

                            }
                            else
                            {
                                //create
                                <input type="submit" class="btn btn-primary w-100" value="Create" />

                            }

                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }



}