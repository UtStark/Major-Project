@model CollegeWebsite.Models.User

<form  id="frmLogin" asp-action="LoginNow" asp-controller="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    <div class="border p-3">



        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label > User Name</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.UserName" class="form-control" />
                        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label > Password</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Password" class="form-control" />
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>

                </div>


                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">

                            <input type="submit" class="btn btn-info w-100" value="Submit" />






                        </div>
                        <div class="col">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>

